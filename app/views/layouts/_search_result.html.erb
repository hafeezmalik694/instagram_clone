<%= turbo_frame_tag "search_results" do %>
<% users.each do |user| %>
<li class="mt-3">
    <div class="d-flex justify-content-between">
        <div class="d-flex">
            <%= render "layouts/user_profile_pic", user: user%>
            <div class="d-flex flex-column mx-2 justify-content-center">
                <%= link_to user_path(id: user.id), class: "text-dark", style: "text-decoration:none;", data:{turbo: false} do %>
                <small class="fw-bold"
                    style="max-width: 10rem; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><%= user.username%></small>
                <% end %>
            </div>
        </div>
    </div>
</li>
<% end %>
<% end %>