<!-- Modal -->
<div class="modal fade modal-lg" id="postModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
  aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-center">
    <%= form_with(model: post) do |form| %>
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Create New Post</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body d-flex">
        <div class="border-end border-secondary mx-2" style="width: 60%">
          <%= form.label :images, style: "display: block" %>
          <%= form.file_field :images, multiple: true, id: "post-images" %>
        </div>
        <div style="width: 40%">
          <div class="my-2">
            <% if current_user.profile_pic.attached? %>
            <%= image_tag (current_user.profile_pic), class: "img-thumbnail rounded-circle", style: "width:10%" %>
            <% else %>
            <%= image_tag ('fb-logo.webp') , class: "img-thumbnail rounded-circle", style: "width:10%"%>
            <% end %>
            <span class="fw-bold mx-2"> <%= current_user.username %> </span>
          </div>
          <% if post.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
            <ul>
              <% post.errors.each do |error| %>
              <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
          <% end %>

          <div>
            <%= form.text_area :caption, rows: 8, placeholder: "write a caption..........", class: "form-control border-0", style: "resize: none" %>
          </div>
          <div>
            <%= form.text_field :location, placeholder: "Enter Your Location..", class: "form-control"%>
          </div>
          <div class="d-flex justify-content-between align-items-center form-control my-2" data-bs-toggle="collapse"
            href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
            <a class="text-dark" style="text-decoration:none">
              Advanced Settings
            </a>
            <i class="fa-solid fa-chevron-down"></i>
          </div>
          <div class="collapse" id="collapseExample">
            <div class="card card-body">
              <div class="form-check form-switch">
                <%= form.check_box :allowed_comments, class: "form-check-input", role: "switch"%>
                <%= form.label :allowed_comments, class: "form-check-label", style: "display: block;"%>

              </div>

              <div class="form-check form-switch">
                <%= form.check_box :show_likes_count, class: "form-check-input", role: "switch"%>
                <%= form.label :show_likes_count, class: "form-check-label", style: "display: block;"%>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <%= form.submit "Post", class: "btn btn-primary" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>