<div class="container home-section d-flex flex-row justify-content-center align-items-center">
  <div class="images-section pt-3 d-none d-lg-block">
    <%= image_tag('home-bd-image.png') %>
  </div>
  <div class="login-section pt-3">
    <div class="card text-center pt-5" style="width: 23rem;">
      <%= image_tag  'logo.png', class: 'card-img-top' %>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3 mt-4">
          <!-- <input type="text" name="email" class="form-control" placeholder="Enter Your Email"> -->
          <%= f.email_field :email, class: "form-control", placeholder:"Enter Your Email" %>
        </div>
        <div class="mb-3 mt-4">
          <!-- <input type="password" name="password" class="form-control" placeholder="Enter your password"> -->
          <%= f.password_field :password, class: "form-control", placeholder:"Enter Your Password" %>

        </div>
        <%= f.submit "Log in", class: "btn btn-primary w-100" %>
        <% end %>

        <div class="d-flex align-items-center mt-4">
          <div class="line"></div>
          <h2 class="line-text">OR</h2>
          <div class="line"></div>
        </div>

        <a href="#" class="d-block mt-4 text-decoration-none fw-bold">
          <%= image_tag 'fb-logo',class: "facebook" %>
          Login with facebook
        </a>

        <a href="#" class="fs-6 d-block mt-4 text-decoration-none">Forgot your password</a>
      </div>
    </div>

    <div class="card text-center py-2 mt-3" style="width: 23rem;">
      <div class="card-text">
        Don't have an account
        <a href="/users/sign_up" class="fs-6 mt-4 text-decoration-none">Sign up</a>
      </div>
    </div>
  </div>
</div>