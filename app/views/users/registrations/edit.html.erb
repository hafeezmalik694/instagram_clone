<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= render "users/shared/error_messages", resource: resource %>
<div class="container card w-75 d-flex flex-row my-3 ps-0">

  <div class="w-25 d-flex flex-column border-end">
    <a href="#" class="active p-3 profile-edit-btn">Edit Profile</a>
  </div>
  <div class="w-50 ms-5 d-flex flex-column p-4">
    <div class="d-flex align-items-center">
      <%= image_tag resource.profile_pic.attached? ? resource.profile_pic : "fb-logo.webp" ,
      class: "img-thumbnail rounded-circle", style:"max-width: 3rem; max-height: 3rem;" %>
      <div class="d-flex flex-column mx-3 justify-content-center">
        <small class="fw-bold"
          style="overflow:hidden;text-overflow:ellipsis;white-space: nowrap;max-width:10rem"><%= resource.username%></small>
        <%= f.file_field  :profile_pic , class: "form-control form-control-sm"%>
      </div>
      <div class="form-check">
        <%= f.check_box :is_private, class: "form-check-input" %>
        <%= f.label :private_account, class: "form-check-label fw-bold" %>
      </div>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="row mb-3 mt-3">
      <%= f.label :name ,class: "col-sm-4 col-form-label fw-bold"%>
      <div class="col-sm-8">
        <%= f.text_field :name, placeholder: "Enter Your Full Name", class:"form-control" %>
        <small class="text-muted">
          Help People descover your account by name
        </small>
      </div>
    </div>
    <div class="row mb-3 mt-3">
      <%= f.label :email ,class: "col-sm-4 col-form-label fw-bold"%>
      <div class="col-sm-8">
        <%= f.email_field :email, autocomplete: "Email", placeholder: "Enter Your Email", class:"form-control" %>
      </div>
    </div>

    <div class="row mb-3 mt-3">
      <%= f.label :phone_no ,class: "col-sm-4 col-form-label fw-bold"%>
      <div class="col-sm-8">
        <%= f.text_field :phone_no, autocomplete: "Phone No", placeholder: "Enter Your Phone No", class:"form-control" %>
      </div>
    </div>

    <div class="row mb-3 mt-3">
      <%= f.label :username ,class: "col-sm-4 col-form-label fw-bold"%>
      <div class="col-sm-8">
        <%= f.text_field :username, autocomplete: "username", placeholder: "Enter Your UserName", class:"form-control" %>
      </div>
    </div>
    <div class="row mb-3 mt-3">
      <%= f.label :bio ,class: "col-sm-4 col-form-label fw-bold"%>
      <div class="col-sm-8">
        <%= f.text_area :bio, autocomplete: "bio", placeholder: "Add Your bio",auto_focus: true, rows:5, class:"form-control" %>
      </div>
    </div>

    <div class="row mb-3 mt-3">
      <%= f.label :password ,class: "col-sm-4 col-form-label fw-bold"%>
      <div class="col-sm-8">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Enter Your New Password", class:"form-control" %>
      </div>
    </div>
    <div class="row mb-3 mt-3">
      <%= f.label :password_confirmation ,class: "col-sm-4 col-form-label fw-bold"%>
      <div class="col-sm-8">
        <%= f.password_field :password_confirmation, autocomplete: "password-confirmation", placeholder: "Confirm Your Password", class:"form-control" %>
      </div>
    </div>
    <div class="row mb-3 mt-3">
      <%= f.label :current_password ,class: "col-sm-4 col-form-label fw-bold"%>
      <div class="col-sm-8">
        <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Enter Your Current Password", class:"form-control" %>
      </div>
      <small class="text-muted">Required to save changes.</small>
    </div>

    <div class="d-flex mb-2 justify-content-center">
      <%= f.submit "Submit", class:"btn btn-primary" %>
    </div>
  </div>
</div>
<% end %>