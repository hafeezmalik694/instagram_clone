<div class="container border-bottom d-flex justify-centent-center align-items-center gap-5" , style="max-height: 20rem">
    <%= image_tag user.profile_pic.attached? ? user.profile_pic : "fb-logo.webp" ,
        class: "img-thumbnail rounded-circle w-25", style:"max-width: 8rem; max-height: 8rem;" %>
    <div class="w-50 d-flex flex-column gap-4">
        <div class="d-flex gap-3 align-items-center">
            <p class="m-0 fw-bold"><%= user.username%></p>
            <button class="btn border border-1">Message</button>
            <%= render "layouts/follow_state", user: user %>
            <% if user == current_user %>
            <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-transparent border", data: {turbo: false} %>
            <% end %>
        </div>
        <div class="d-flex gap-5">
            <small class="fw-bold"><%= pluralize(user.posts.count, "posts")%></small>
            <small class="fw-bold"><%= pluralize(user.followers.count, "Followers")%> </small>
            <small class="fw-bold"><%= pluralize(user.followings.count, "Following")%> </small>
        </div>

        <div class="d-flex flex-column">
            <small class="fw-bold"><%= user.full_name %> </small>
            <small><%= user.bio %> </small>

        </div>

    </div>
</div>